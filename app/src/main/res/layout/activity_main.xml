<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#311B92"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            app:cardBackgroundColor="#311B92"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_alignParentBottom="true"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="25dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="16dp"
                            android:text="OVERVIEW"
                            android:textColor="#00000a"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Assets" />

                                <ProgressBar
                                    android:id="@+id/ProgressBar1"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="40" /><!--// 50 default progress value-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Goals" />

                                <ProgressBar
                                    android:id="@+id/ProgressBar2"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="60" /><!--// 50 default progress value-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Matches" />

                                <ProgressBar
                                    android:id="@+id/ProgressBar3"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="80" /><!--// 50 default progress value-->
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="7"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="32"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="28"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Recovery" />

                                <ProgressBar
                                    android:id="@+id/Progress_percentage"
                                    style="?android:attr/progressBarStyleLarge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:max="100"
                                    android:progress="75"></ProgressBar>

                            </LinearLayout>

                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            card_view:cardBackgroundColor="#00000a"
                            card_view:cardCornerRadius="25dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/button_home"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#00000a"
                                    android:clickable="true"
                                    android:drawableTop="@drawable/ic_home"
                                    android:gravity="center"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp"
                                    android:textSize="12dp"
                                    android:textAllCaps="false"
                                    android:text="Home"
                                    android:textColor="#ffffff" />

                                <Button
                                    android:id="@+id/button_search"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#00000a"
                                    android:clickable="true"
                                    android:drawableTop="@drawable/ic_search"
                                    android:gravity="center"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp"
                                    android:textSize="12dp"
                                    android:textAllCaps="false"
                                    android:text="search"
                                    android:textColor="#ffffff" />

                                <Button
                                    android:id="@+id/button_notifications"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#00000a"
                                    android:clickable="true"
                                    android:textSize="12dp"
                                    android:textAllCaps="false"
                                    android:drawableTop="@drawable/ic_notifications"
                                    android:gravity="center"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp"
                                    android:text="Notification"
                                    android:textColor="#ffffff" />


                            </LinearLayout>


                        </android.support.v7.widget.CardView>


                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>


</LinearLayout>